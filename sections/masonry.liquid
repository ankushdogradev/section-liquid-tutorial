<!-- Masonry Grid Title -->
<h2>{{ section.settings.masonry-grid }}</h2>

<!-- Block Object -> Masonry Grid -->
{%- for bloks in section.blocks -%}
    {{ block.settings.image }}
    {{ block.settings.text }}
    {{ block.settings.url }}
{%- endfor -%}

<div class="grid" data-masonry="{ 'itemSelector': '.grid-item', 'columnWidth': 200 }">
    <div class="grid-item"></div>
    <div class="grid-item"></div>
</div>

{% schema %}
{
    "name": "Masonry Grid",
    "settings": [
        {
            "id": "masonry-grid",
            "type": "text",
            "label": "Add a masonry grid"
        }
    ],
    "blocks":[
    {
        "name": "Masonry Image",
        "type": "masonry-image",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "text",
                "id": "text",
                "label": "Text"
            },
            {
                "type": "url",
                "id": "url",
                "label": "URL"
            }
        ]
    }
    ],
    "presets": [
    {
        "name": "Masonry Grid",
        "category": "Masonry"
    }
    
    ]
}
{% endschema %}